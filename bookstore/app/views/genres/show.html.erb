<h1><%= @genre.title.capitalize %> </h1>
<b>Describtion: </b> <%= @genre.describtion %> <br>
<strong>Books of this genre: </strong>
<br>


<div class="row">
  <% @books.each do |book| %>
  <% if book.genre.title == @genre.title %>
  <div class="col-sm-5 col-md-3">
    <div class="thumbnail">
      <%= image_tag "/uploads/#{book.id}" %>
      <div class="caption">
        <h3><%= book.title %></h3>
        <p><%= book.describtion %></p>
        <p><%= link_to "View", book_path(book), class: "btn btn-default" %></p>
      </div>
    </div>
  </div>
  <% end %>
  <% end %>
</div>

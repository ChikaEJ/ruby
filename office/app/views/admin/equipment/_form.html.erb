<% if @equipment.errors.any? %>
<div>
  Total errors: <%= @equipment.errors.count %>
  <ul>
    <% @equipment.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>
<%= form_for [:admin, @equipment] do |f| %>
  <div>
      <%= f.label :equipment_type %><br>
      <%= f.select :equipment_type, ["Furniture", "Computer equipment", "Network hardware", "ather"] %>
  </div>
  <div>
    <%= f.label :title %> <br>
    <%= f.text_field :title, required: true %>
  </div>
    <div>
    <%= f.label :describtion %> <br>
    <%= f.text_area :description, required: true %>
  </div>
    <div>
    <%= f.label :room %><br>
    <%= f.collection_select :room_id, Room.all, :id, :title %>
  </div>
  <div>
    <%= f.label :image %><br>
    <%= f.file_field :image, placeholder: "IMG" %>
  </div>
  <div >
    <%= f.submit %>
  </div>
<% end %>

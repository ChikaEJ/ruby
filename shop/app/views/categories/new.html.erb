<h1>New Category</h1>

<%= form_for :category, url: categories_path do |f| %>
  <% if @category.errors.any? %>
    <div>
      Total errors: <%= @category.errors.count %>
      <ul>
        <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= f.label :name %> <br>
    <%= f.text_field :name, required: true %>
  </div>

  <div>
    <%= f.submit %>
  </div>
<% end %>

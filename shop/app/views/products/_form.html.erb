<%= form_for @product do |f| %>

    <% if @product.errors.any? %>
        <div class="errors">
          Total errors: <%= @product.errors.count %>
          <ul>
            <% @product.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div>
      <%= f.label :title %><br/>
      <%= f.text_field :title %>
    </div>

    <div>
      <%= f.label :description %><br/>
      <%= f.text_area :description %>
    </div>
    <div >
      <%= f.label :picture %><br/>
      <%= f.file_field :picture %>
    </div>
    <div>
      <%= f.label :category %> <br>
      <%= f.collection_select :category_id, Category.all, :id, :name %>
    </div>
    <div>
      <%= f.label :price %><br/>
      <%= f.text_field :price %>
    </div>

    <div>
      <%= f.submit %>
    </div>
<% end %>

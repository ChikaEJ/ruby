<h1>Books</h1>

<br><br>
<div class="row">
  <% @books.each do |book| %>
    <% unless book.title.nil? %>
      <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
          <%= image_tag "/uploads/#{book.id}", size: '300' %>
          <div class="caption">
            <h3><%= book.title %></h3>
            <p><%= book.describtion %></p>
            <p><%= book.created_at %></p>
            <p><%= link_to "View", book_path(book), class: "btn btn-default" %> </p>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>

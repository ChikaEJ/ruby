<h1>Records</h1>

<%= link_to "Add new record", new_record_path, class: "btn btn-default" %>
<br><br>

<div class="row">
  <% @records.each do |record| %>
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <div class="caption">
        <h3>
          <%= record.name + "(" + record.email + ")" %>
          <%= link_to "", record_path(record), title: "view", class: "glyphicon glyphicon-eye-open" %>
          <%= link_to "", edit_record_path(record), title: "edit", class: "glyphicon glyphicon-edit" %>
          <%= link_to "",record_path(record), title: "delete", class: "glyphicon glyphicon-remove",
                                    method: :delete,
                                    data: {confirm: "Do you want to delete this record?"}
          %>
        </h3>
        <p><%= record.text %></p>
        <p>

        </p>
      </div>
    </div>
  </div>
  <% end %>
</div>

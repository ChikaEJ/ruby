<h1><%= @author.name.capitalize %> </h1>
<p><%= image_tag "/authors/#{@author.id}", size: "100" %></p>
<%= @author.describtion %> <br>
<strong>Authors books: </strong>
<br>
<div class="row">
  <% @books.each do |book| %>
  <% if book.author.name == @author.name %>
  <div class="col-sm-5 col-md-3">
    <div class="thumbnail">
      <%= image_tag "/uploads/#{book.id}" %>
      <div class="caption">
        <h3><%= book.title %></h3>
        <p><%= book.describtion %></p>
        <p><%= link_to "View", book_path(book), class: "btn btn-default" %></p>
      </div>
    </div>
  </div>
  <% end %>
  <% end %>
</div>

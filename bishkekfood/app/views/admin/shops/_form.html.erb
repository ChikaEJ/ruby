<% if @shop.errors.any? %>
    <div>
      Total errors: <%= @shop.errors.count %>
      <ul>
        <% @shop.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <!-- true -->
<% end %>
<%= form_for @shop, url: form_url, method: form_method do |f| %>
    <div>
      <%= f.label :title %> <br>
      <%= f.text_field :title, required: true %>
    </div>
    <div>
      <%= f.label :describtion %> <br>
      <%= f.text_area :describtion, required: true %>
    </div>
    <div>
      <%= f.label :image %> <br>
      <%= f.file_field :image %>
    </div>
    <div >
      <%= f.submit %>
    </div>
<% end %>

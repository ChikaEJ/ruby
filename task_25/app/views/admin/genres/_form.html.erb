<% if @genre.errors.any? %>
<div>
  Total errors: <%= @genre.errors.count %>
  <ul>
    <% @genre.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
  <!-- true -->
<% end %>
<%= form_for @genre, url: form_url, method: form_method do |f| %>
  <div>
    <%= f.label :title %> <br>
    <%= f.text_field :title, required: true %>
  </div>

  <div>
    <%= f.label :describtion %> <br>
    <%= f.text_area :describtion, required: true %>
  </div>

  <div >
    <%= f.submit %>
  </div>
<% end %>

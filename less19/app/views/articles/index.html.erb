<h1>All articles</h1>

<p>
  <%= link_to "New Aricle", articles_new_path %>
</p>

<table>
  <tr>
    <th>ID</th>
    <th>Athor</th>
    <th>Title</th>
    <th>Text</th>
  </tr>
  <% @articles.each do |article| %>
  <tr>
    <td><%= article.id %></td>
    <td><%= article.author %></td>
    <td><%= link_to article.title, article_show_path(article.id) %></td>
    <td><%= article.content %></td>
  </tr>
  <% end %>
</table>

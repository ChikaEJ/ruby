<h1>Genres</h1>

<%= link_to "Add new genre", new_admin_genre_path, class: "btn btn-default" %>
<br><br>
<table class="table table-bordered">
  <tr>
    <th>Name</th>
    <th>Action</th>
  </tr>
  <% @genres.each do |genre| %>
  <tr>
    <td><%= genre.title %></td>
    <td>
      <%= link_to "View", genre_path(genre) %> |
      <%= link_to "Edit", edit_admin_genre_path(genre) %> |
      <%= link_to "Delete", admin_genre_path(genre),
                              method: :delete,
                              data: {confirm: "Do you want to delete this genre?"}
      %>
    </td>
  </tr>
  <% end %>
</table>

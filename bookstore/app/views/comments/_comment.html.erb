<div class="list-group" id=<%= comment.id %> >
  <h4 class="list-group-item-heading"><strong>Author:</strong><%= comment.author %></h4>
  <p class="list-group-item-text"><strong>Rating:</strong><%= comment.rating %></p>
  <p class="list-group-item-text"><strong>Comment: </strong><%= comment.text %></p>
  <%= link_to "Delete", book_comment_path(comment.book_id, comment.id), id: "comment-delete", remote: true, class: "btn btn-default",
              method: :delete,
              data: {confirm: "Do you want to delete this comment?"}
  %>
</div>
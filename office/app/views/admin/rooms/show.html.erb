<h1>Room: <%= @room.title %></h1>

<p><b>Number: </b><%= @room.number %></p>
<p><b>Title: </b><%= @room.title %></p>
<div class="btn btn-default"><%= link_to "Add new equipment", new_admin_equipment_path %></div>
  <div class="row">
    <% @equipment.each do |equipment| %>
        <% if((equipment.room_id) == (@room.id)) %>
        <div class="col-sm-6 col-md-4">
          <div class="thumbnail">
            <%= image_tag "/uploads/#{equipment.id}", size: "300" %>
            <div class="caption">
              <h3><%= equipment.equipment_type %></h3>
              <p><%= equipment.title %></p>
              <p><%= equipment.description %></p>
              <p><%= link_to "View", admin_equipment_path(equipment), class: "btn btn-default" %>
                <%= link_to "Edit", edit_admin_equipment_path(equipment), class: "btn btn-default" %>
                <%= link_to "Delete", admin_equipment_path(equipment), class: "btn btn-default",
                            method: :delete,
                            data: {confirm: "Do you want to delete this equipment?"}
                %>
              </p>
            </div>
          </div>
        </div>
        <% end %>
    <% end %>
  </div>
<div class="btn btn-default"><%= link_to "Back", root_path %></div>

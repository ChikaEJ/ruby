<%= form_for :user, url: form_url, method: form_method do |f| %>
<p>
  <%= f.label :name %> <br>
  <%= f.text_field :name %>
</p>
<p>
  <%= f.label :surname %> <br>
  <%= f.text_field :surname %>
</p>
<p>
  <%= f.label :email %> <br>
  <%= f.email_field :email %>
</p>
<p>
  <%= f.label :pasword %> <br>
  <%= f.password_field :pasword %>
</p>
<p>
  <%= f.label :description %> <br>
  <%= f.text_area :description %>
</p>
<p>
  <%= f.label :gender %> <br>
  <%= f.label "M" %>
  <%= f.radio_button(:gender, "Male")%>
  <%= f.label "F" %>
  <%= f.radio_button(:gender, "Female")%>
</p>
<p>
  <%= f.label :city %> <br>
  <%= f.select :city, ['Bishkek', 'Almata', 'Tashkent', 'Moscow', '...']%>
</p>
<p>
  <%= f.label "Online" %> <br>
  <%= f.check_box :status, {}, "Online", "Offline" %>
</p>


<p>
  <%= f.submit %><br>
</p>

<% end %>

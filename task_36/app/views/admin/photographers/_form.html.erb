<%= form_for [:admin, @photographer] do |f| %>

<div class="form-group <%= 'has-error' if @photographer.errors[:name].any? %>">
  <%= f.label :name, class: 'col-sm-2 control-label' %>
  <div class="col-sm-10">
    <%= f.text_field :name, class: 'form-control' %>
    <%= render 'shared/field_errors', object: @photographer, field_name: :name %>
  </div>
</div>

<div class="form-group <%= 'has-error' if @photographer.errors[:lastname].any? %>">
  <%= f.label :lastname, class: 'col-sm-2 control-label' %>
  <div class="col-sm-10">
    <%= f.text_field :lastname, class: 'form-control' %>
    <%= render 'shared/field_errors', object: @photographer, field_name: :lastname %>
  </div>
</div>

<div class="form-group <%= 'has-error' if @photographer.errors[:email].any? %>">
    <%= f.label :email, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.email_field :email, class: 'form-control' %>
      <%= render 'shared/field_errors', object: @photographer, field_name: :email %>
    </div>
  </div>

  <div class="form-group <%= 'has-error' if @photographer.errors[:phone].any? %>">
    <%= f.label :phone, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :phone, class: 'form-control' %>
      <%= render 'shared/field_errors', object: @photographer, field_name: :phone %>
    </div>
  </div>




  <%= f.submit "save" %>

<% end %>

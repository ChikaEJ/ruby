<h1>Rooms</h1>

<%= link_to "Add new room", new_admin_room_path, class: "btn btn-default" %>
<br><br>

<div class="row">
  <% @rooms.each do |room| %>
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail" style="background-color: #999999">
      <div class="caption">
        <h3><%= room.number %></h3>
        <h3><%= link_to room.title, admin_room_path(room) %></h3>
          <%= link_to "Edit", edit_admin_room_path(room), class: "btn btn-default" %>
          <%= link_to "Delete", admin_room_path(room), class: "btn btn-default",
                                    method: :delete,
                                    data: {confirm: "Do you want to delete this room?"}
          %>
        </p>
      </div>
    </div>
  </div>
  <% end %>
</div>

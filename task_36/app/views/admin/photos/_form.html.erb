<%= form_for [:admin, @photo] do |f| %>

<div class="form-group <%= 'has-error' if @photo.errors[:title].any? %>">
  <%= f.label :title, class: 'col-sm-2 control-label' %>
  <div class="col-sm-10">
    <%= f.text_field :title, class: 'form-control' %>
    <%= render 'shared/field_errors', object: @photo, field_name: :title %>
  </div>
</div>

  <div class="form-group <%= 'has-error' if @photo.errors[:description].any? %>">
    <%= f.label :description, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_area :description, class: 'form-control' %>
      <%= render 'shared/field_errors', object: @photo, field_name: :description %>
    </div>
  </div>

  <div class="form-group <%= 'has-error' if @photo.errors[:picture].any? %>">
    <%= f.label :picture, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.file_field :picture, class: 'form-control' %>
      <%= render 'shared/field_errors', object: @photo, field_name: :picture %>
    </div>
  </div>
  <div class="form-group <%= 'has-error' if @photo.errors[:photographer].any? %>">
    <%= f.label :photographer, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.collection_select :photographer_id, Photographer.all, :id, :name %>
      <%= render 'shared/field_errors', object: @photo, field_name: :photographer %>
    </div>
  </div>



  <%= f.submit "save" %>

<% end %>

<%= form_for [@book, @book.comments.build], remote: true do |f| %>
    <div>
      <%= f.label :author %> <br>
      <%= f.text_field :author %>
    </div>
    <div>
      <%= f.label :rating %> <br>
      <%= f.select :rating, [0, 1, 2, 3, 4, 5] %>
    </div>
    <div>
      <%= f.label "Comment" %> <br>
      <%= f.text_area :text %>
    </div>

    <%= f.submit class: "btn btn-info" %>
<% end %>

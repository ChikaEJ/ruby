<% if @record.errors.any? %>
  <div>
    Total errors: <%= @record.errors.count %>
    <ul>
      <% @record.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @record  do |f| %>
  <div>
    <%= f.label :name %> <br>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :email %> <br>
    <%= f.email_field :email %>
  </div>
  <div>
    <%= f.label :text %> <br>
    <%= f.text_area :text %>
  </div>
  <div>
    <%= f.submit "Save" %>
  </div>
<% end %>

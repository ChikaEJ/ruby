<h1>Add new product</h1>
<p>
  <%= link_to "All products", root_path %>
</p>
<%= form_for :product, url: products_create_path do |f| %>
<p>

  <%= f.label :name_of_product %><br>
  <%= f.text_field :name_of_product %>
</p>
<p>
  <%= f.label :description %><br>
  <%= f.text_area :description %>
</p>
<p>
  <%= f.label :price %><br>
  <%= f.text_field :price, placeholder: "0.0"%>
</p>
<p>
  <%= f.submit "ADD"%>
</p>

<% end %>

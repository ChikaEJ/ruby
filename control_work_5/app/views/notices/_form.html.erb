<%= simple_form_for(@notice) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.association :category %>
    <%= f.input :content %>
    <%= f.input :contacts %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

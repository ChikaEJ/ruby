<h1>Equipment</h1>

<%= link_to "Add new equipment", new_admin_equipment_path, class: "btn btn-default" %>
<br><br>

<div class="row">
  <% @equipment.each do |equipment| %>
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <%= image_tag "/uploads/#{equipment.id}", size: "300" %>
      <div class="caption">
        <h3><%= equipment.equipment_type %></h3>
        <p> <b>Title: </b><%= equipment.title %></p>
        <p><b>Room number: </b> <%= equipment.room.number %></p>
        <p> <b> Description: </b> <%= equipment.description %></p>
        <p><%= link_to "View", admin_equipment_path(equipment), class: "btn btn-default" %>
          <%= link_to "Edit", edit_admin_equipment_path(equipment), class: "btn btn-default" %>
          <%= link_to "Delete", admin_equipment_path(equipment), class: "btn btn-default",
                                    method: :delete,
                                    data: {confirm: "Do you want to delete this equipment?"}
          %>
        </p>
      </div>
    </div>
  </div>
  <% end %>
</div>

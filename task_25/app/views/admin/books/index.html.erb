<h1>Books</h1>

<%= link_to "Add new book", new_admin_book_path, class: "btn btn-default" %>
<br><br>
<div class="row">
  <% @books.each do |book| %>
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <%= image_tag "/uploads/#{book.id}" %>
      <div class="caption">
        <h3><%= book.title %></h3>
        <p><%= book.describtion %></p>
        <p><%= book.created_at %></p>
        <p><%= link_to "View", book_path(book), class: "btn btn-default" %>
          <%= link_to "Edit", edit_admin_book_path(book), class: "btn btn-default" %>
          <%= link_to "Delete", admin_book_path(book), class: "btn btn-default",
                                    method: :delete,
                                    data: {confirm: "Do you want to delete this book?"}
          %>
        </p>
      </div>
    </div>
  </div>
  <% end %>
</div>

<h1>Shops</h1>

<%= link_to "Add new shop", new_admin_shop_path, class: "btn btn-default" %>
<br><br>

<div class="row">
  <% @shops.each do |shop| %>
      <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
          <%= link_to (image_tag "/shop/#{shop.id}", size: "300"), shop_path(shop) %>
          <div class="caption">
            <h3><%= shop.title %></h3>
            <p><%= shop.describtion %></p>
            <p><%= shop.created_at %></p>
            <p><%= link_to "View", shop_path(shop), class: "btn btn-default" %>
              <%= link_to "Edit", edit_admin_shop_path(shop), class: "btn btn-default" %>
              <%= link_to "Delete", admin_shop_path(shop), class: "btn btn-default",
                          method: :delete,
                          data: {confirm: "Do you want to delete this shop?"}
              %>
            </p>
          </div>
        </div>
      </div>
  <% end %>
</div>
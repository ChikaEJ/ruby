<h1>All users</h1>

<p>
  <table class="table table-striped table-bordered table-hover table-condensed">
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Surname</th>
      <th>Email</th>
      <th>Action</th>
    </tr>
    <% @users.each do |user| %>
    <tr>
      <td><%= user.id %></td>
      <td><%= link_to user.name, user_path(user.id) %></td>
      <td><%= user.surname %></td>
      <td><%= user.email %></td>
      <td><%= link_to "Edit", edit_user_path(user.id), method: :get %></td>
      <td><%= link_to "Delete", user_path(user.id), method: :delete, data: { confirm: "Are you sure?" } %></td>
    </tr>
    <% end %>
  </table>
</p>
<p>

  <div class="btn btn-default">
    <ul class="nav nav-pills ">
      <li role="presentation" class="active"><%= link_to "Add new user", new_user_path %></li>
    </ul>
  </div>

</p>

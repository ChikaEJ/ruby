<h1>Authors</h1>

<%= link_to "Add new author", new_admin_author_path, class: "btn btn-default" %>
<br><br>
<table class="table table-bordered">
  <tr>
    <th>Name</th>
    <th>Action</th>
  </tr>
  <% @authors.each do |author| %>
  <tr>
    <td><%= author.name %></td>
    <td><%= link_to "Veiw", author_path(author) %> |
        <%= link_to "Edit", edit_admin_author_path(author) %> |
        <%= link_to "Delete", admin_author_path(author),
                              method: :delete,
                              data: {confirm: "Do you want to delete this author?"}
      %>
    </td>
  </tr>
  <% end %>
</table>
<%= link_to "Add new author", new_admin_author_path, class: "btn btn-default navbar navbar-fixed-bottom" %>

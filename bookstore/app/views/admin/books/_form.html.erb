<% if @book.errors.any? %>
<div>
  Total errors: <%= @book.errors.count %>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>
<%= form_for @book, url: form_url, method: form_method do |f| %>
  <div>
    <%= f.label :title %> <br>
    <%= f.text_field :title, required: true %>
  </div>
  <div>
    <%= f.label :describtion %> <br>
    <%= f.text_area :describtion, required: true %>
  </div>
  <div>
    <%= f.label :genre %><br>
    <%= f.collection_select :genre_id, Genre.all, :id, :title %>
  </div>
  <div>
    <%= f.label :author %><br>
    <%= f.collection_select :author_id, Author.all, :id, :name %>
  </div>
  <div>
    <%= f.label :picture %><br>
    <%= f.file_field :picture, placeholder: "IMG" %>
  </div>
  <div>
    <%= f.label :price %> <br>
    <%= f.text_field :price, placeholder: "0.0" %>
  </div>
  <div>
    <%= f.label :sale %> <br>
    <%= f.text_field :sale, value: 0 %>
  </div>
  <div >
    <%= f.submit %>
  </div>
<% end %>
